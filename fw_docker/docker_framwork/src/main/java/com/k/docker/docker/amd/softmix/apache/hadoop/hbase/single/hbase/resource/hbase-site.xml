<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <configuration>
        <property>
            <name>hbase.rootdir</name>
            <!-- 			<value>hdfs://hphppd1:9000/hbase</value> -->
            <value>/opt/soft/hbase/data</value>
        </property>
        <property>
            <name>hbase.cluster.distributed</name>
            <value>true</value>
        </property>
        <property>
            <name>hbase.zookeeper.quorum</name>
            <value>hbhbzk1,hbhbzk2,hbhbzk3</value>
        </property>
        <property>
            <name>zookeeper.znode.parent</name>
            <value>/hbase</value>
        </property>
        <property>
            <name>hbase.tmp.dir</name>
            <value>/opt/soft/hbase/tmp</value>
        </property>
    </configuration>
</configuration>